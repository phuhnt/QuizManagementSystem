@model PagedList.IPagedList<Model.EF.Class>
@using PagedList;
@using PagedList.Mvc;
@using Model.DAO;

@{
    ViewBag.Title = "Danh sách lớp học";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@section linkHeader{
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" type="text/css" />
}

@section breadcrumb{
    Danh sách lớp học
}
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Danh sách lớp học
        <a class="btn btn-primary" href="/admin/class/create">Thêm lớp học</a>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Index", "class", FormMethod.Get))
        {
            <div class="input-group col-6" style="margin-bottom: 20px;">
                <input type="text" class="form-control" name="searchString" value="@ViewBag.SearchString" placeholder="Nhập thông tin cần tìm..." aria-label="searchString" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Năm học</th>
                            <th>Tên lớp học</th>
                            <th>Số học sinh</th>
                            <th>Trạng thái</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Năm học</th>
                            <th>Tên lớp học</th>
                            <th>Số học sinh</th>
                            <th>Trạng thái</th>
                            <th>Chức năng</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(model => item.Grade.SchoolYear.NameOfSchoolYear)</td>
                                <td>@Html.DisplayFor(model => item.Name)</td>
                                <td>@Html.DisplayFor(model => item.Users.Count)</td>
                                <td>
                                    @{
                                        if (item.Status == null)
                                        {
                                            <p class="badge badge-pill badge-info">Chưa thiết lập</p>

                                        }
                                        else if (item.Status == true)
                                        {
                                            <p class="badge badge-pill badge-success">Đang hoạt động</p>
                                        }
                                        else
                                        {
                                            <p class="badge badge-pill badge-danger">Đóng</p>
                                        }
                                    }
                                </td>
                                <td width="20%">
                                    <a class="btn btn-info" href="/admin/class/details/@item.Id">Chi tiết</a>
                                    <a class="btn btn-warning" href="/admin/class/edit/@item.Id">Sửa</a>
                                    <a class="btn btn-danger" href="/admin/class/delete/@item.Id">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
            </div>
        }
    </div>
</div>
